<div class="ui card">
  <%= link_to shop_product_path(product.shop, product), class: "image" do %>
      <%= image_tag  product.skus.first.picture.url(:medium) if product.skus.any? %>
  <% end %>
  <div class="content">
    <%= link_to product.name, shop_product_path(product.shop, product), class: "header" %>
    <div class="meta">
      <a><%= product.shop.name %></a>
    </div>
    <div class="description">
      <p><%= product.caption %></p>
    </div>
  </div>
  <div class="extra content">
    <span class="ui tag label">Price: <%= number_to_currency(product.skus.first.price, prescision: 2) if product.skus.any? %></span>
  </div>
</div>